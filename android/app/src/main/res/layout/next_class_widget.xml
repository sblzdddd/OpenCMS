<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_widget_background"
    android:theme="@style/Theme.Android.AppWidgetContainer"
    android:padding="14dp"
    tools:ignore="RemoteViewLayout">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject"
            android:textColor="#F9B19C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/RoomText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Room"
            android:textColor="#F7B09B"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Middle Info -->

    <!-- Flexible Spacer (use padding or margins instead of unsupported View/Space) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:text="" />

    <!-- Subject and Room Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SubjectCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject Code"
            android:textColor="#EBD9D4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Time"
            android:textColor="#F1DFDA"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:maxWidth="48dip"
        android:maxHeight="12dip"
        android:minHeight="12dip"
        android:progress="20"
        android:progressTint="#F9B19C" />
</LinearLayout>
